---
const { punto } = Astro.props;
---

<a
  href={punto.URL}
  rel="noopener noreferrer"
  target="_blank"
  class="flex flex-col justify-center w-full h-full gap-y-2 rounded border border-gray-100 shadow-sm p-4"
>
  <div class="flex items-center w-full h-full text-gray-500">
    <svg
      class="min-w-4 w-4 h-4 me-1"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 15a6 6 0 1 0 0-12 6 6 0 0 0 0 12Zm0 0v6M9.5 9A2.5 2.5 0 0 1 12 6.5"
      ></path>
    </svg>

    <p class="text-sm font-medium text-gray-900">{punto.nombre}</p>
  </div>
  <p
    class="inline-flex px-1 items-center text-sm font-medium rounded-lg text-primary-500 w-max hover:text-primary-800"
  >
    <span>Ver sitio</span>

    <svg
      class="w-4 h-4 ms-1"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M18 14v4.833A1.166 1.166 0 0 1 16.833 20H5.167A1.167 1.167 0 0 1 4 18.833V7.167A1.166 1.166 0 0 1 5.167 6h4.618m4.447-2H20v5.768m-7.889 2.121 7.778-7.778"
      ></path>
    </svg>
  </p>
</a>
